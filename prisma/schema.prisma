generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bot {
  id        String   @id @default(cuid())
  name      String
  domain    String   // 'medical' | 'legal' | 'receptionist'
  uid       String   @unique // OpenMic bot UID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  callLogs  CallLog[]

  @@map("bots")
}

model CallLog {
  id         String   @id @default(cuid())
  bot        Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  botId      String
  transcript String   @db.Text
  metadata   Json
  createdAt  DateTime @default(now())

  @@map("call_logs")
}
